<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath*:server.properties</value>
            </list>
        </property>
        <property name="systemPropertiesMode" value="2"/>
    </bean>

    <bean id="manageServiceImpl" class="com.pengpeng.stargame.servermanager.ManageServiceImpl"/>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="ManageService"/>
        <property name="service" ref="manageServiceImpl"/>
        <property name="serviceInterface" value="com.pengpeng.stargame.managed.IManageService"/>
        <property name="registryPort" value="${server.port}"/>
    </bean>

    <bean id="monitorServiceImpl" class="com.pengpeng.stargame.servermanager.MonitorServiceImpl"/>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="MonitorService"/>
        <property name="service" ref="monitorServiceImpl"/>
        <property name="serviceInterface" value="com.pengpeng.stargame.managed.IMonitorService"/>
        <property name="registryPort" value="${server.port}"/>
    </bean>

    <!-- velocity config -->
    <bean id="velocityEngine" class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
        <property name="velocityProperties">
            <props>
                <prop key="resource.loader">class</prop>
                <prop key="class.resource.loader.class">
                    org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
                </prop>
                <prop key="input.encoding">UTF-8</prop>
                <prop key="output.encoding">UTF-8</prop>
            </props>
        </property>
    </bean>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="NodeClient"/>
        <property name="service" ref="simpleClientService"/>
        <property name="serviceInterface" value="com.pengpeng.stargame.managed.IClientService"/>
        <property name="registryPort" value="${server.port}"/>
    </bean>

    <bean id="serverChecker" class="com.pengpeng.stargame.servermanager.ServerChecker"/>

    <bean id="serverCheckerScheduleJob"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="serverChecker"/>
        <property name="targetMethod" value="exec"/>
        <property name="concurrent" value="false"/>
    </bean>
    <bean id="serverCheckerScheduleTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
        <property name="jobDetail" ref="serverCheckerScheduleJob"/>
        <property name="cronExpression" value="*/2 * * * * ? *"/>
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="serverCheckerScheduleTrigger"/>
            </list>
        </property>
    </bean>
</beans>