            <value>${hibernate.driverClassName}</value>
        </property>
        <property name="jdbcUrl">
            <value>${db.rule.url}</value>
        </property>
        <property name="user">
            <value>${db.rule.username}</value>
        </property>
        <property name="password">
            <value>${db.rule.password}</value>
        </property>
        <property name="idleConnectionTestPeriod">
            <value>3600</value>
        </property>
    </bean>
