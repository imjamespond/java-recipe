<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%-5level %date{"HH:mm:ss"} | %-8.8thread | %25.25(%logger:%L) | %-8.8M | %m%n</pattern>
    </encoder>
  </appender>

  <root level="DEBUG">
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="io.netty" additivity="false" level="INFO">
    <appender-ref ref="STDOUT"/>
  </logger>

  <logger name="io.vertx.core.impl.BlockedThreadChecker" additivity="false" level="ERROR">
    <appender-ref ref="STDOUT"/>
  </logger>


</configuration>
